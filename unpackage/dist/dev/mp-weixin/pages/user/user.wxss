
.userinfo {
  font-size: 20px;
}
.uni-list-item__container {
  align-items: center;
}
.uni-list-item__content {
  flex-direction: row !important;
}
.edit-avatar {
  margin: 0;
  padding: 0;
  border: none !important;
}
.edit-avatar::after {
  border: none !important;
}
.hover .uni-list-item {
  background: #f1f1f1 !important;
}
.edit-avatar image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.stuInfo {
  font-size: 18px;
}
.stuInfo view {
  cursor: pointer;
  margin-bottom: 5px;
}
.stuInfo view:last-child {
  margin-bottom: 0;
}
.item-title {
  font-size: 24px;
  font-weight: bold;
}
.item-note {
  color: #999;
  font-size: 12px;
  margin-left: 5px;
}
.item-time {
  font-size: 12px;
  color: #999;
  display: flex;
  flex-direction: column;
}
.item-footer {
  align-self: center;
  margin-left: auto;
}
.edgeInsetBottom {
  width: 100%;
  height: var(--window-bottom);
  padding: 10px;
}
